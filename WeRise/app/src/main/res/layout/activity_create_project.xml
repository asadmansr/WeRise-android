<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.asadmansoor.werise.CreateProject">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Name"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/project_name_tv" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_name_tv"
        android:id="@+id/project_name_et"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Description"
        android:textStyle="bold"
        android:layout_below="@id/project_name_et"
        android:layout_marginTop="8dp"
        android:id="@+id/project_desc_tv" />


    <EditText
        android:inputType="textMultiLine"
        android:lines="4"
        android:minLines="3"
        android:gravity="top|left"
        android:maxLines="8"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:scrollbars="vertical"
        android:id="@+id/project_desc_et"
        android:layout_below="@id/project_desc_tv" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theme"
        android:textStyle="bold"
        android:layout_below="@id/project_desc_et"
        android:layout_marginTop="8dp"
        android:id="@+id/theme_tv" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/theme1"
        android:background="@drawable/education"
        android:layout_below="@id/theme_tv"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/education_text"
        android:text="Education"
        android:layout_below="@id/theme1"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/healthcare"
        android:layout_toRightOf="@id/theme1"
        android:layout_alignBottom="@id/theme1"
        android:layout_marginLeft="12dp"
        android:id="@+id/theme2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/healthcare_text"
        android:text="Health care"
        android:layout_below="@id/theme2"
        android:layout_alignLeft="@id/theme2"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/environment"
        android:layout_toRightOf="@id/theme2"
        android:layout_alignBottom="@id/theme1"
        android:layout_marginLeft="12dp"
        android:id="@+id/theme3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/environment_text"
        android:text="Environment"
        android:layout_alignLeft="@id/theme3"
        android:layout_below="@id/theme3"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/peace"
        android:layout_toRightOf="@id/theme3"
        android:layout_alignBottom="@id/theme1"
        android:layout_marginLeft="12dp"
        android:id="@+id/theme4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/peace_text"
        android:text="Peace"
        android:layout_alignLeft="@id/theme4"
        android:layout_below="@id/theme4"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invite"
        android:textStyle="bold"
        android:layout_below="@id/education_text"
        android:layout_marginTop="16dp"
        android:id="@+id/Invite_tv" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Invite_tv"
        android:id="@+id/invite_et"
        android:hint="Email address or @username"
        />

</RelativeLayout>
