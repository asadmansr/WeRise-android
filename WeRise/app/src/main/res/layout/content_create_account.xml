<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.asadmansoor.werise.CreateAccount"
    tools:showIn="@layout/activity_create_account2">

    <ImageView
        android:layout_width="133dp"
        android:layout_height="111dp"
        android:id="@+id/profile_pic"
        android:background="@drawable/profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_camera"
        android:layout_alignTop="@id/profile_pic"
        android:layout_alignRight="@+id/profile_pic"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:id="@+id/name_tv"
        android:layout_below="@id/profile_pic"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="48dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_et"
        android:layout_below="@id/name_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Me"
        android:textStyle="bold"

        android:id="@+id/title_tv"
        android:layout_below="@id/name_et"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_et"
        android:layout_below="@id/title_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textStyle="bold"

        android:id="@+id/location_tv"
        android:layout_below="@id/title_et"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location_et"
        android:layout_below="@id/location_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Causes"
        android:textStyle="bold"

        android:id="@+id/Causes_tv"
        android:layout_below="@id/location_et"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education"
        android:textColor="@color/background_color"
        android:id="@+id/education_tv"
        android:layout_below="@id/Causes_tv"
        android:layout_alignParentLeft="true"
        android:background="@drawable/text_background"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health care"
        android:textColor="@color/background_color"

        android:id="@+id/healthcare_tv"
        android:layout_below="@id/Causes_tv"
        android:layout_toRightOf="@id/education_tv"
        android:background="@drawable/text_background"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Environment"
        android:textColor="@color/background_color"

        android:id="@+id/environment_tv"
        android:layout_below="@id/Causes_tv"
        android:layout_toRightOf="@id/healthcare_tv"
        android:background="@drawable/text_background"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peace"
        android:textColor="@color/background_color"

        android:id="@+id/peace_tv"
        android:layout_below="@id/Causes_tv"
        android:layout_toRightOf="@id/environment_tv"
        android:background="@drawable/text_background"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" + "
        android:textColor="@color/background_color"
        android:id="@+id/more_tv"
        android:layout_below="@id/Causes_tv"
        android:layout_toRightOf="@id/peace_tv"
        android:background="@drawable/text_background"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp" />


</RelativeLayout>
